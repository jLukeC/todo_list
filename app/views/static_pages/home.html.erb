<script src="knockout-2.1.0.js"> </script>
<script type="text/javascript">

var todoViewModel = function(){
    this.newTask = ko.observable("")
    this.tasks = ko.observableArray([
        { name: 'Run' },
        { name: 'Ski' },
        { name: 'Program' }
    ]);
    this.addTask = function () {
        this.tasks.push({name: this.newTask()});
        this.newTask("")
    }
    this.removeTask = function(){
        self.tasks.remove(this);
    }
    // could i do removePerson(person) so that in the html i just pass in the name
};

window.onload = ko.applyBindings(new todoViewModel);; </script>
